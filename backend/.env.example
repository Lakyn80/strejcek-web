# Backend .env example
FLASK_ENV=production
SECRET_KEY=change-me-please

# Mail settings (use real SMTP or app password)
MAIL_SERVER=smtp.seznam.cz
MAIL_PORT=587
MAIL_USERNAME=you@example.cz
MAIL_PASSWORD=your-app-password
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_DEFAULT_SENDER="Palety • Big-Bagy • Krabice Strejček <you@example.cz>"
MAIL_TO=you@example.cz

# CORS
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend.example

# Rate limit
RATE_LIMIT=5 per minute

# Optional: Google reCAPTCHA
ENABLE_RECAPTCHA=false
RECAPTCHA_SECRET=
